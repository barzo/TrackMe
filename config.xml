<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.bluebear.TrackMe" version="0.0.1">
	<name>TrackMe</name>
	<description>Tracks the location of your mobile device.</description>
	<author href="http://www.bluebearsoftware.co.uk" email="admin@bluebearsoftware.co.uk">Bernhard Hofmann</author>

	<icon src="icon.png" gap:role="default" />
	<gap:splash src="splash.png" />

	<plugin name="Accelerometer" value="org.apache.cordova.AccelListener" />

	<access origin="*" />

	<preference name="fullscreen" value="true" />
	<preference name="orientation" value="portrait" />

	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
</widget>
